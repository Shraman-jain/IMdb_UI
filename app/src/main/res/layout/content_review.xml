<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".review"
    tools:showIn="@layout/activity_review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Review Form"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name"
            android:textColorHint="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            ></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="60dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:id="@+id/movRB"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Series"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:id="@+id/webRB"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celebrity"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:id="@+id/celebRB"/>
            </RadioGroup>
        </LinearLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Movie/series/celeb Name"
            android:textColorHint="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            ></EditText>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:textAlignment="center"
            android:maxLines="3"
            android:layout_marginTop="20dp"
            android:hint="Enter Review"
            android:textSize="30sp"
            android:textColorHint="@color/white"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textSize="40sp"
            android:textStyle="bold"
            android:background="@color/ltblack"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/submit"></Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>